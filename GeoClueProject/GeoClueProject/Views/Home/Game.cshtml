

@model HomeGameVM
<img src="@Model.ImageURL" />


<form asp-controller="Home" asp-action="Game">

    <label asp-for="CountryList"></label>
    <select asp-for="SelectedCountryValue" asp-items="Model.CountryList"> </select>
    <input type="submit" value="Guess" />
    <input type="submit" value="Hint" />
</form>

<button id="btnMovieHTML">Get Movie (HTML)</button>
<button id="btnMovieJSON">Get Movie (JSON)</button>

<div id="divResult"></div>
@section scripts
{
    <script>
        $("#btnMovieHTML").click(function () {
            //var id = $("#MovieID").val();
            $.ajax({
                url: "/Home/ImageHint",
                type: "GET",
                success: function (result) {
                    $("#divResult").html(result);
                }
            });
            alert("Hello Angie!");

        });

        $("#btnMovieJSON").click(function () {
            var id = $("#MovieID").val();
            $.ajax({
                url: "Movie/MovieBoxJSON/" + id,
                type: "GET",
                success: function (result) {
                    var html = "<div>" + result.name + result.description + "</div>";
                    $("#divResult").html(html);
                }
            });
        });
    </script>
}
