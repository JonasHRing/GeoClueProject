
@{ViewBag.Title = "Register"; }
@model AccountRegisterVM

    <div class="registerBox">
        <h3>Register</h3>
   

            <form asp-controller="Account" asp-action="Register">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="Textbox" />
                <span asp-validation-for="Username"></span>

                <label asp-for="Password"></label>
                <input asp-for="Password" class="Textbox"/>
                <span asp-validation-for="Password"></span>

                <label asp-for="PasswordRepeat"></label>
                <input asp-for="PasswordRepeat"class="Textbox" />
                <span asp-validation-for="PasswordRepeat"></span>
                <br />
                <input style="color:white" type="submit" value="Register" class="Submit"/>
            </form>
           



                <a asp-controller="Account" asp-action="Login">
                    <input style="color:white" type="submit" value="Go to Sign in" class="Submit"/>
                </a>

                <div asp-validation-summary="All"></div>

            </div>
